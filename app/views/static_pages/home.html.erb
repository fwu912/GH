<div class="center hero-unit">
	
	<h1>Welcome to GeeHood</h1>
	<h2>GeeHood is currently under construction! Please check back later.</h2>

	<% unless user_signed_in? %>	
		<%= link_to "Sign Up!", new_user_registration_path, class: "btn btn-large btn-primary" %>
	<% end %>

	<% if user_signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/item_form' %>
      </section>
    </aside>
  </div>
<% end %>

</div>



<% if Item.any? %>
	<h1>Listing Items</h1>
	<div class="items">
		<%= render :partial => 'shared/items', :locals => { :items => @items } %>
	</div>
	<%= link_to 'Load More Items', root_path(:page => @items.next_page), :class => 'load-more-items', :remote => true if @items.next_page %>



	
<% end %>
		


